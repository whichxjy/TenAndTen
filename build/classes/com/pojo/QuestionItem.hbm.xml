<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>
   <class name="com.pojo.QuestionItem" table="question_items">
      <meta attribute="class-description">
         This class contains the QuestionItem detail. 
      </meta>
      
      <id name="id" type="int" column="question_id">
         <generator class="native"/>
      </id>
      <property name="question" column="question" type="string"/>
      <property name="rightAnswer" column="right_answer" type="string"/>
   </class>
</hibernate-mapping>