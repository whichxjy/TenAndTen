<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >


<hibernate-mapping>
   <class name="com.pojo.Manager" table="managers">
      <meta attribute="class-description">
         This class contains the manager detail. 
      </meta>
      
      <id name="id" type="int" column="manager_id">
         <generator class="native"/>
      </id>
      <property name="name" column="manager_name" type="string"/>
      <property name="password" column="manager_password" type="string"/>
   </class>
</hibernate-mapping>